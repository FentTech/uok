{
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/spa",
  "framework": "vite",
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "^/assets/.*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(?!assets/).*",
      "dest": "/index.html"
    }
  ]
}
